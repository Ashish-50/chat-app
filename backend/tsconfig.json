{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "NodeNext",                              
    "moduleResolution": "NodeNext",                   
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": true,
    "allowSyntheticDefaultImports": true,    
    "resolveJsonModule": true,                             
  }
}